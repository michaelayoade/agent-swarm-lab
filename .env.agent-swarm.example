# DeepSeek API
DEEPSEEK_API_KEY=your-deepseek-api-key-here

# ERP Database (used by MCP server)
DOTMAC_ERP_DB_DSN=postgresql://postgres:postgres@localhost:5437/dotmac_erp

# Telegram Bot
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-telegram-chat-id

# GitHub (use gh auth login instead, or set this)

# Agent defaults
MAX_CONCURRENT_AGENTS=3
MAX_AGENT_RETRIES=3
AGENT_TIMEOUT_MINUTES=30

# Project
SWARM_PROJECT_DIR=$HOME/projects/agent-swarm-lab
SWARM_REPO_OWNER=your-github-username
SWARM_REPO_NAME=agent-swarm-lab
